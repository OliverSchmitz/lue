{
    "version": 7,
    "include": [
        "CMakeHPXPresets.json"
    ],
    "configurePresets": [
        {
            "name": "ninja_configuration",
            "hidden": true,
            "generator": "Ninja"
        },
        {
            "name": "lue_debug",
            "inherits": [
                "hpx_debug_node_configuration"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "lue_relwithdebinfo",
            "inherits": [
                "hpx_relwithdebinfo_node_configuration"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "lue_release",
            "inherits": [
                "hpx_release_node_configuration"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}
