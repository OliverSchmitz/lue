#include "lue/version.hpp"


namespace lue {

    auto version() -> std::string
    {
        return "${LUE_VERSION}";
    }


    auto major_version() -> std::uint32_t
    {
        return ${LUE_VERSION_MAJOR};
    }


    auto minor_version() -> std::uint32_t
    {
        return ${LUE_VERSION_MINOR};
    }


    auto patch_version() -> std::uint32_t
    {
        return ${LUE_VERSION_PATCH};
    }


    auto tweak_version() -> std::uint32_t
    {
        return ${LUE_VERSION_TWEAK} + 0;
    }

}  // namespace lue
